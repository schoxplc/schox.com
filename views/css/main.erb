* {
  background-repeat: no-repeat;
}

.topbar, .topbar .container {
  height: 140px;
}

.topbar div > ul, .nav {
  margin-top: 100px;
}

.topbar li {
  background-position : top left;
  text-indent         : -4000px;
  width               : 100px;
}

.topbar li.intro   { background-image: url(/images/nav/intro.png); }
.topbar li.founder { background-image: url(/images/nav/founder.png); }
.topbar li.team    { background-image: url(/images/nav/team.png); }
.topbar li.clients { background-image: url(/images/nav/clients.png); }
.topbar li.contact { background-image: url(/images/nav/contact.png); }

.topbar a.brand {
  margin-top: 32px;
  text-indent: -4000px;
  width: 270px;
  height: 70px;
  display: block;
  background-image: url(/images/logo.png);
}

#team span.name {
  font-weight: bold;
}

#contact span.phone {
  font-weight: bold;
}

.row > [class*="span"] {
  margin-left: 0;
}

.container {
  width: 920px;
}

.container.main {
  margin-top: 85px;
}

.sidebar {
  background : #000;
  color      : #fff;
  height     : 518px;
  opacity    : 0.8;
  padding    : 8px;
  width      : 280px;
}

.sidebar * {
  color: #fff;
}

.sidebar a {
  color: #ddd;
  text-decoration: underline;
}
