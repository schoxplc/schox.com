* {
  background-repeat: no-repeat;
}

.topbar, .topbar .container {
  position: relative;
  height: 40px;
}

.topbar a.brand {
  margin-top: 32px;
  margin-left: 1px;
  text-indent: -4000px;
  width: 270px;
  height: 70px;
  display: block;
  background-image: url(/images/logo.png);
}

.topbar div > ul, .nav {
  margin-top: 100px;
}

.topbar li {
  background-position : 2px 0;
  height              : 20px;
  margin-right        : 10px;
  text-indent         : -4000px;
  width               : 70px;
}

.topbar li.divider:hover,
.topbar li.divider {
  background-position : 0 -2px;
  height              : 20px;
  width               : 5px;
  background-image: url(/images/nav/divider.png);
}

.topbar li.intro   {
  background-image: url(/images/nav/intro.png);
}

.topbar li.founder {
  background-image: url(/images/nav/founder.png);
  width: 100px;
}

.topbar li.team    {
  background-image: url(/images/nav/team.png);
}

.topbar li.clients {
  background-image: url(/images/nav/clients.png);
  width: 85px;
}

.topbar li.contact {
  background-image: url(/images/nav/contact.png);
  width: 100px;
}

.topbar li:hover, .topbar li.active {
  background-position : -104px 0;
}

.bg {
  width: 630px;
  height: 517px;
}
.intro    .bg { background-image: url(/images/jeffschox-office.jpg); }
.founder  .bg { background-image: url(/images/jeffschox.jpg); }
.omission .bg { background-image: url(/images/jeffschox.jpg); }
.team     .bg { background-image: url(/images/schoxplc-team.jpg); }
.clients  .bg { background-image: url(/images/software.png); }
.clients_software  .bg { background-image: url(/images/software.png); }
.clients_medical   .bg { background-image: url(/images/medical.png); }
.clients_cleantech .bg { background-image: url(/images/cleantech.png); }
.clients_ecommerce .bg { background-image: url(/images/ecommerce.png); }
.clients_consumer  .bg { background-image: url(/images/consumer.png); }
.contact    .bg { background-image: url(/images/schoxplc-contact.jpg); }
.disclaimer .bg { background-image: url(/images/onyourown.jpg); }

.sidebar_photo {
  width: 300px;
  background-position : -640px 0;
}
.intro     .sidebar_photo { background-image: url(/images/jeffschox-office.jpg); }
.founder   .sidebar_photo { background-image: url(/images/jeffschox.jpg); }
.omission  .sidebar_photo { background-image: url(/images/jeffschox.jpg); }
.team      .sidebar_photo { background-image: url(/images/schoxplc-team.jpg); }
.clients   .sidebar_photo { background-image: url(/images/software.png); }
.clients_software  .sidebar_photo { background-image: url(/images/software.png); }
.clients_medical   .sidebar_photo { background-image: url(/images/medical.png); }
.clients_cleantech .sidebar_photo { background-image: url(/images/cleantech.png); }
.clients_ecommerce .sidebar_photo { background-image: url(/images/ecommerce.png); }
.clients_consumer  .sidebar_photo { background-image: url(/images/consumer.png); }
.contact    .sidebar_photo { background-image: url(/images/schoxplc-contact.jpg); }
.disclaimer .sidebar_photo { background-image: url(/images/onyourown.jpg); }

#team span.name {
  font-weight: bold;
}

#contact span.phone {
  font-weight: bold;
}

.row > [class*="span"] {
  margin-left: 0;
}

.container {
  width: 920px;
}

.container.main {
  margin-top: 85px;
}

.sidebar {
  color      : #fff;
  height     : 498px;
  padding    : 10px;
  width      : 280px;
  line-height: 1.5em;
}

.sidebar * {
  color: #fff;
}

.sidebar a {
  color: #ddd;
  text-decoration: underline;
}

.sidebar li {
  margin-left: 1.0em;
}

.sidebar_black {
  background-image: url(/images/nav/black.png);
  background-repeat: repeat;
}

#play_video {
  text-indent: -4000px;
  display: block;
  width: 90px;
  height: 90px;
  margin: 0 auto;
  background-position: 0 0;
  background-image: url(/images/nav/play_btn.png);
}
#play_video:hover {
  background-position: 0 -90px;
}

#schoxbar {
  margin-top: 10px;
}

#schoxbar .icons {
  background-image : url(/images/nav/schox-icons.png);
  height           : 40px;
  margin           : 0 auto;
  width            : 218px;
}

#schoxbar .indicator {
  background-image    : url(/images/nav/dot.png);
  background-position : 0 0;
  height              : 10px;
  margin              : 10px auto 0 auto;
  width               : 218px;
}

#schoxbar.software  .indicator { background-position : 15px 0; }
#schoxbar.medical   .indicator { background-position : 60px 0; }
#schoxbar.cleantech .indicator { background-position : 102px 0; }
#schoxbar.ecommerce .indicator { background-position : 147px 0; }
#schoxbar.consumer  .indicator { background-position : 192px 0; }

