.founder  .bg { background-image: url(/images/jeffschox.jpg); }
.omission .bg { background-image: url(/images/jeffschox.jpg); }
.team     .bg { background-image: url(/images/schoxplc-team.jpg); }
.clients  .bg { background-image: url(/images/software.png); }
.clients_software  .bg { background-image: url(/images/software.png); }
.clients_medical   .bg { background-image: url(/images/medical.png); }
.clients_cleantech .bg { background-image: url(/images/cleantech.png); }
.clients_ecommerce .bg { background-image: url(/images/ecommerce.png); }
.clients_consumer  .bg { background-image: url(/images/consumer.png); }
.contact    .bg { background-image: url(/images/schoxplc-contact.jpg); }
.disclaimer .bg { background-image: url(/images/onyourown.jpg); }

.sidebar_photo {
  width: 300px;
  background-position : -640px 0;
}
.intro     .sidebar_photo { background-image: url(/images/jeffschox-office.jpg); }
.founder   .sidebar_photo { background-image: url(/images/jeffschox.jpg); }
.omission  .sidebar_photo { background-image: url(/images/jeffschox.jpg); }
.team      .sidebar_photo { background-image: url(/images/schoxplc-team.jpg); }
.clients   .sidebar_photo { background-image: url(/images/software.png); }
.clients_software  .sidebar_photo { background-image: url(/images/software.png); }
.clients_medical   .sidebar_photo { background-image: url(/images/medical.png); }
.clients_cleantech .sidebar_photo { background-image: url(/images/cleantech.png); }
.clients_ecommerce .sidebar_photo { background-image: url(/images/ecommerce.png); }
.clients_consumer  .sidebar_photo { background-image: url(/images/consumer.png); }
.contact    .sidebar_photo { background-image: url(/images/schoxplc-contact.jpg); }
.disclaimer .sidebar_photo { background-image: url(/images/onyourown.jpg); }

#team span.name {
  font-weight: bold;
}

#contact span.phone {
  font-weight: bold;
}

.row > [class*="span"] {
  margin-left: 0;
}

.container {
  width: 920px;
}

.container.main {
  margin-top: 85px;
}

.sidebar {
  color      : #fff;
  height     : 498px;
  padding    : 10px;
  width      : 280px;
  line-height: 1.5em;
  position: relative;
}

.sidebar * {
  color: #fff;
}

.sidebar a {
  color: #ddd;
  text-decoration: underline;
}

.sidebar li {
  margin-left: 1.0em;
}

.sidebar_black {
  background-image: url(/images/nav/black.png);
  background-repeat: repeat;
}

#play_video {
  text-indent: -4000px;
  display: block;
  width: 90px;
  height: 90px;
  margin: 0 auto;
  background-position: 0 0;
  background-image: url(/images/nav/play_btn.png);
}
#play_video:hover {
  background-position: 0 -90px;
}

/* CLIENTS NAV */

#clients_nav {
  position: absolute;
  height: 64px;
  margin: 10px auto 0 auto;
  width: 240px;
  bottom: 0;
  left: 36px;
}

#clients_nav a {
  background-image : url(/images/nav/client-icons.png);
  display          : block;
  float            : left;
  height           : 40px;
  margin           : 0 5px 0 0;
  text-indent      : -4000px;
  width            : 40px;
}

#clients_nav a.software  { background-position :    0px 0px; }
#clients_nav a.medical   { background-position :  -45px 0px; }
#clients_nav a.cleantech { background-position :  -90px 0px; }
#clients_nav a.ecommerce { background-position : -135px 0px; }
#clients_nav a.consumer  { background-position : -180px 0px; }

/* lame hack since FFX can't do independent x/y background position;
 * see: http://commadot.com/background-position-y-firefox-fails/ and
 * http://snook.ca/archives/html_and_css/background-position-x-y
 */
#clients_nav a:hover.software  { background-position :    0px -40px; }
#clients_nav a:hover.medical   { background-position :  -45px -40px; }
#clients_nav a:hover.cleantech { background-position :  -90px -40px; }
#clients_nav a:hover.ecommerce { background-position : -135px -40px; }
#clients_nav a:hover.consumer  { background-position : -180px -40px; }

/* FOOTER */

footer {
  border-top: transparent;
}

footer p {
  color: #999;
}

.footer {
  font-size: 12px;
  margin-top: 16px;
}

.footer a {
  color: #000;
}

.footer > div {
  background-image    : url(/images/nav/gray.png);
  background-position : 77px 0;
  height              : 70px;
  margin-right        : 13px;
  margin-right        : 20px;
  padding-top         : 8px;
  position            : relative;
  text-indent         : 90px;
  width               : 300px;
}

.footer > div img {
  left          : -2px;
  padding-right :  12px;
  position      :  absolute;
  top           : -3px;
}

.footer .write {
  margin-right: 0;
}
