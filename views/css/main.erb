* {
  background-repeat: no-repeat;
}

.topbar, .topbar .container {
  position: relative;
  height: 40px;
}

.topbar a.brand {
  margin-top: 32px;
  text-indent: -4000px;
  width: 270px;
  height: 70px;
  display: block;
  background-image: url(/images/logo.png);
}

.topbar div > ul, .nav {
  margin-top: 100px;
}

.topbar li {
  background-position : 2px 0;
  height              : 20px;
  margin-right        : 10px;
  text-indent         : -4000px;
  width               : 70px;
}

.topbar li.divider:hover,
.topbar li.divider {
  background-position : 0 -2px;
  height              : 20px;
  width               : 5px;
  background-image: url(/images/nav/divider.png); 
}

.topbar li.intro   { 
  background-image: url(/images/nav/intro.png); 
}

.topbar li.founder { 
  background-image: url(/images/nav/founder.png); 
  width: 100px;
}

.topbar li.team    { 
  background-image: url(/images/nav/team.png); 
}

.topbar li.clients { 
  background-image: url(/images/nav/clients.png); 
  width: 85px;
}

.topbar li.contact { 
  background-image: url(/images/nav/contact.png); 
  width: 100px;
}

.topbar li:hover, .topbar li.active {
  background-position : -104px 0;
}

#team span.name {
  font-weight: bold;
}

#contact span.phone {
  font-weight: bold;
}

.row > [class*="span"] {
  margin-left: 0;
}

.container {
  width: 920px;
}

.container.main {
  margin-top: 85px;
}

.sidebar {
  background : #000;
  color      : #fff;
  height     : 498px;
  opacity    : 0.8;
  padding    : 10px;
  width      : 280px;
}

.sidebar * {
  color: #fff;
}

.sidebar a {
  color: #ddd;
  text-decoration: underline;
}
