    %link{:href => "/images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}

  %body
    .topbar
      .container
        %a.brand{:href => "/"}
          Schox PLC
        %div{:class => 'pull-right'}
          %ul.nav
            %li.intro
              %a{:href => "/"} Intro
            %li.founder
              %a{:href => "/founder"} Founder
            %li.team
              %a{:href => "/team"} Team
            %li.clients
              %a{:href => "/clients"} Clients
            %li.contact
              %a{:href => "/contact"} Contact

    .container.main
      .content
        .row
          .span11
            \#{yield}
          .span3.sidebar
            = yield_content :sidebar
        .row
          .span6
            Not So Obvious: An Introduction to Patent Law and Strategy
            By Jeffrey Schox |
            %a{:href => "http://www.amazon.com/Not-So-Obvious-Introduction-Strategy/dp/1466269812"} Available on Amazon
            
          .span5
            #twitter
              %a{:href => "https://twitter.com/#!/jschox"}
                Follow us on Twitter
            #lectures
              Lectures on iTunes
            #presos
              Presentation on Slideshare
          .span5
            #write
              Write us at info@schoxplc.com
            #call
              Call us at 888.123.4567
            #read
              Read our disclaimer

      %footer
        %p Â© Schox PLC, 2012
