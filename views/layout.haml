- page_id = request.path_info.gsub(%r{/}, '_').gsub( /^_/, '')
- page_id = page_id.empty? ? "intro" : page_id
!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %title Schox PLC
    %meta{:content => "A boutique patent firm dedicated to startup ventures.", :name => "description"}
    %meta{:content => "Schox PLC", :name => "author"}
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    / Le styles
    %link{:href => "/css/bootstrap-1.4.0", :rel => "stylesheet"}
    %link{:href => "/css/bootstrap-overrides", :rel => "stylesheet"}
    %link{:href => "/css/main", :rel => "stylesheet"}
    %link{:href => "/css/fancybox-1.3.4", :rel => "stylesheet"}
    %link{:href => "/favicon.png", :rel => "shortcut icon"}
    %link{:href => "/images/apple-touch-icon.png", :rel => "apple-touch-icon"}
    %link{:href => "/images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}
    %link{:href => "/images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}

  %body{:class => page_id }
    .topbar
      .container
        %a.brand{:href => "/"}
          Schox PLC
        %div{:class => 'pull-right'}
          %ul.nav
            %li.intro{:class => (page_id == "intro" ? "active" : "")}
              %a{:href => "/"} Intro
            %li.divider
            %li.founder{:class => ((page_id == "founder" || page_id == "omission") ? "active" : "")}
              %a{:href => "/founder"} Founder
            %li.divider
            %li.team{:class => (page_id == "team" ? "active" : "")}
              %a{:href => "/team"} Team
            %li.divider
            %li.clients{:class => (page_id.match("clients_") ? "active" : "")}
              %a{:href => "/clients/software"} Clients
            %li.divider
            %li.contact{:class => (page_id == "contact" ? "active" : "")}
              %a{:href => "/contact"} Contact

    .container.main
      .content
        .row
          .span11
            \#{yield}
          .span3.sidebar_photo
            .sidebar_black
              .sidebar
                = yield_content :sidebar

        .row.footer
          .span6.book
            %a{:href => "http://www.amazon.com/Not-So-Obvious-Introduction-Strategy/dp/1492741795/", :title => "Get the book" }
              %img{:src => "/images/nav/book.png", :alt => ""}
            %div
              %a{:href => "http://www.amazon.com/Not-So-Obvious-Introduction-Strategy/dp/1492741795/"}
                %strong Not So Obvious: An Introduction to
            %div
              %a{:href => "http://www.amazon.com/Not-So-Obvious-Introduction-Strategy/dp/1492741795/"}
                %strong Patent Law and Strategy
              %br
            %div
              By Jeffrey Schox
              %a{:href => "http://www.amazon.com/Not-So-Obvious-Introduction-Strategy/dp/1492741795/"}
                Available on Amazon

          .span5.twitter
            %a{:href => "https://twitter.com/#!/jschox", :title => "Follow us"}
              %img{:src => "/images/nav/twitter.png", :alt => ""}
            %div
              %a{:href => "https://twitter.com/#!/jschox"}
                %strong Follow us
                on Twitter
            %div
              %a{:href => "https://itunes.apple.com/us/itunes-u/patent-law-strategy-for-innovators/id597710068"}
                %strong Lectures
                on iTunes
            #presos
              %a{:href => "http://www.slideshare.net/JSchox/"}
                %strong Presentations
                on Slideshare

          .span5.write
            %a{:href => "http://g.co/maps/z9fjq", :title => "Find us"}
              %img{:src => "/images/nav/map.png", :alt => ""}
            #write
              %a{:href => "mailto:info@schoxplc.com"}
                %strong Write us
                at
                info @ schoxplc.com
            #call
              %strong Call us
              at 888.775.9990
            #read
              %a{:href => "/disclaimer"}
                %strong Read
                our disclaimer

      %footer
        %p Â© Schox PLC, 2012

    / end /container

    <script src='//ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js' type='text/javascript'></script>
    <script src="/javascripts/jquery.fancybox-1.3.4.js"></script>
    <script src="/javascripts/jquery.easing-1.3.pack.js"></script>

    :javascript

      $("#play_video").click(function() {
        $.fancybox({
          'padding'       : 0,
          'autoScale'     : false,
          'transitionIn'  : 'elastic',
          'transitionOut' : 'elastic',
          'width'         : 940,
          'height'        : 517,
          'href'          : this.href.replace(new RegExp("watch\\?v=", "i"), 'v/'),
          'type'          : 'swf',
          'swf'           : {
            'wmode'           : 'transparent',
            'allowfullscreen' : 'true'
          }
          });
        return false;
      });

